@using PagedList.Mvc;
@model  PagedList.IPagedList<STA.SuperCompra.Aplicacao.ViewModels.CategoriaViewModel>
@{STA.SuperCompra.Aplicacao.ViewModels.CategoriaViewModel c = new STA.SuperCompra.Aplicacao.ViewModels.CategoriaViewModel(); }



<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Categorias de produtos";
}
<div>
    <h2>Categorias de produto</h2>
</div>

@using(Html.BeginForm("Index", "Categoria", FormMethod.Get))
{
}

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>@ViewBag.Title</strong>
    </div>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(item => c.Descricao)
                @*Categoria(s)*@
            </th>
            <th>Ações</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Categoria", new {id = item.CategoriaId}) " class="btn btn-primary"><span title="Editar" class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Details", "Categoria", new {id = item.CategoriaId}) " class="btn btn-info"><span title="Detalhes" class="glyphicon glyphicon-list-alt"></span></a>
                    <a href="@Url.Action("Delete", "Categoria", new {id = item.CategoriaId}) " class="btn btn-danger"><span title="Excluir" class="glyphicon glyphicon-trash"></span></a>

                    @*@Html.ActionLink("Edit", "Edit", new { id=item.CategoriaId }) |
                        @Html.ActionLink("Details", "Details", new { id=item.CategoriaId }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.CategoriaId })*@
                </td>
            </tr>
        }

    </table>
</div>
    Página @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) de @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
<div>
    <div class="form-group">
        @Html.ActionLink("Nova categoria", "Create", "Categoria", null, new { @class = "btn btn-primary" })
    </div>
</div>