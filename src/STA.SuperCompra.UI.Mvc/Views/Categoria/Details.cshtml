@model STA.SuperCompra.Aplicacao.ViewModels.CategoriaViewModel

@{
    ViewBag.Title = "Detalhes da categoria";
}

<h2>@ViewBag.Title</h2>

<div class="container">
    <div class="row">
        <div class="">
            <div class="painel panel-info">
                <div class="panel-heading">
                    <h4 class="painel-title">@Model.Descricao</h4>
                </div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Descricao)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Descricao)
                    </dd>
                </dl>
            </div>
            <div class="panel-footer">
                <a href="@Url.Action("Edit", "Categoria", new {id = Model.CategoriaId})" data-modal="" class="btn btn-primary">
                    <span title="Editar" class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="@Url.Action("Delete", "Categoria", new { id = Model.CategoriaId })" data-modal="" class="btn btn-danger">
                    <span title="Excluir" class="glyphicon glyphicon-trash"></span>
                </a>
            </div>
        </div>
    </div>
</div>
