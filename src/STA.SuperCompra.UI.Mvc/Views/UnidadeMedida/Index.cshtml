@model IEnumerable<STA.SuperCompra.Aplicacao.ViewModels.UnidadeMedidaViewModel>

@{
    ViewBag.Title = "Lista de Unidades";
}

<h2>Gestão de Unidades de Medidas</h2>


<div class="panel panel-default">
    <div class="panel-heading">
        <strong>@ViewBag.Title</strong>
    </div>

    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Unidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>Ações</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Unidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "UnidadeMedida", new {id = item.UnidadeMedidaId})" class="btn btn-default"><span title="Editar" class="glyphicon glyphicon-pencil"></span></a>
                    <a href="@Url.Action("Details", "UnidadeMedida", new {id = item.UnidadeMedidaId })" class="btn btn-default"><span title="Detalhes" class="glyphicon glyphicon-search"></span></a>
                    <a href="@Url.Action("Delete", "UnidadeMedida", new {id = item.UnidadeMedidaId })" class="btn btn-danger"><span title="Excluir" class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }

    </table>
</div>
<div>
    <div class="form-group">
        @Html.ActionLink("Nova unidade de medida", "Create", "UnidadeMedida", null, new { @class = "btn btn-primary" })
    </div>
</div>