@model STA.SuperCompra.Aplicacao.ViewModels.ItensCompraViewModel

@{
    ViewBag.Title = "_AtualizarProduto";
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">
        <span aria-hidden="true">×</span><span class="sr-only">Close</span>
    </button>
    <h4 class="modal-title">Atualizar item</h4>
</div>


@using (Html.BeginForm())
{
    <div class="modal-body">
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Hidden("CompraId", (Guid?)ViewBag.CompraId)
            @Html.HiddenFor(model => model.ItensCompraId)
            @Html.HiddenFor(model => model.CompraId)

            @Html.Partial("_Produto")

            <div class="modal-footer">
                <input type="submit" value="Atualizar" class="btn btn-success" />
                <input type="button" class="btn btn-default" data-dismiss="modal" value="Fechar" />
            </div>
        </div>
    </div>
}
